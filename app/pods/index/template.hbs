{{#if fetchRecommendedCoursesTask.isRunning}}
    Loading... {{!-- here we can show blank cards to indicate loading --}}
{{else}}
    <div class="card-stack">   
        {{#each recommendedCourses as |course|}}
            <div class="card o-layout-card ">
                <div class="card-image o-image-card">
                    <img src="{{course.coverImage}}">
                </div>
                <div class="card-heading o-text-card">
                    {{course.title}}
                </div>
                <div class="card-text">
                    {{course.summary}}
                </div>
                <div class="button-solid">
                    <button>Register</button>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}
