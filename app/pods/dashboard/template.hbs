<div class="row">
  <div class="col-8">
    <h4 class="my-4">Continue Learning</h4>

    {{!-- Recent run and stats card --}}
    <div class="border-card p-5">
      <div class="row align-items-center justify-content-center">
        <div class="col-6">
          <div class="li-left">
            <div class="mr-4">
              <img src="{{lastAccessedRun.course.logo}}" width="100%">
            </div>
            <div>
              <h5 class="bold">{{lastAccessedRun.course.title}}</h5>
              <div>
                Mentor: 
                {{log lastAccessedRun.course}}
                {{#each lastAccessedRun.course.intructors as |instructor|}}
                  {{instructor.name}} {{#unless @last}} , {{/unless}}
                {{/each}}
              </div>
            </div>
          </div>
        </div>
        <div class="col-6">
          <span class="bold">Course Progress</span>
          <div class="row py-3">
            <div class="col-10">
              <progress value="{{progress.percent}}" max="100"></progress> 
            </div>
            <div class="col-2">
              <span class="extra-bold">{{progress.percent}}%</span> 
            </div>
          </div>
        </div>
      </div>

      <div class="divider-h w-100 mx-auto my-5"></div>

      <WAsync 
        @task={{fetchPerformanceStatsTask}}
        @autoFire="true" as |stats|>
        <PerformanceStatsView 
          @stats={{stats}} />
      </WAsync>

      <div class="divider-h w-100 mx-auto my-5"></div>

      <div class="row align-items-center justify-content-center">
        <div class="col-6 float-left">
          <span>
            <RatingStars 
              @course={{lastAccessedRun.course}}
              @initialRating={{lastAccessedRun.course.userRating}} />
          </span>
        </div>
        <div class="col-6">
          <button class="button-solid button-orange float-right">Resume Now</button>
        </div>
      </div>
    </div>

    {{!-- My courses card --}}
    <div class="my-5">
      <div class="border-card p-5">
        <div class="d-flex align-items-center justify-content-between">
          <h4 class="bold">My Courses</h4>
          <LinkTo @route="classroom" class="orange font-sm font-normal">View All</LinkTo>
        </div>
        <div class="divider-h my-4"></div>

        <WAsync @task={{fetchCoursesTask}} @autoFire="true" as |runs|>
          <Dashboard::DashboardCoursesList @runs={{runs}} />
        </WAsync>
      </div>
    </div>

    <div class="mb-5">
      <div class="row">
        <div class="col-6">
          <div class="border-card p-0">
            <div class="px-5 pt-5">
              <h4 class="bold">Wishlisted Courses</h4>
              <div class="divider-h mt-4"></div>
            </div>
            <WAsync 
              @task={{fetchWishlistCoursesTask}}
              @autoFire="true" as |wishlist|>
              <Dashboard::DashboardWishList @wishlist={{wishlist}} />
            </WAsync>
            <div class="t-align-c">
              <button class="button-solid button-orange my-5">View All</button>
            </div>
          </div>
        </div>

        <div class="col-6">
          <div class="border-card p-0">
            <div class="px-5 pt-5">
              <h4 class="bold">Applied Jobs</h4>
              <div class="divider-h mt-4"></div>
            </div>
            <WAsync 
              @task={{fetchAppliedJobsTask}}
              @autoFire="true" as |jobs|>
              <Dashboard::DashboardAppliedJobs @jobs={{jobs}} />
            </WAsync>
            <div class="t-align-c">
              <button class="button-solid button-orange my-5">View All</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="border-card border-orange">
      <span class="bold font-md">Hackerblocks Report</span>
      <div class="font-normal">
        Improve your Coding Skills
      </div>
      <div class="divider-h my-4"></div>
      <WAsync
        @task={{fetchHackerblocksStats}}
        @autoFire="true" as |stats|>
        <div>
          <span class="font-md">Current Rank</span>
          <span>{{stats.currentOverallRank}}</span>
        </div>
        <div>
          <span class="font-md">Performance</span>
          <span>{{stats.currentMonthScore}} Points</span>
        </div>
      </WAsync>
    </div>
  </div>  
</div>
