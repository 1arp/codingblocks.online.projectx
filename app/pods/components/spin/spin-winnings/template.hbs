<div class="border-card p-5 t-align-c">
  <h4 class="spin-purple font-md">
    My Winnings
  </h4>

  <div class="flex-row align-items-center mt-5">
    <span>
      <i class="fas fa-chevron-left"></i>
    </span>
    <div class="row mx-3 w-100 flex-nowrap overflow-x-auto">
      {{#each usedSpins as |spin|}}
        <div class="col-6 col-md-4 col-lg-3 px-2">
          <div class="c-winning-card border-none white">
            <div class="trophy">
              <img src="/app/images/trophy.svg" alt="trophy">
            </div>
            <div class="content spin-bg-purple">
              <div class="font-sm spin-yellow">
                You Won
              </div>
              <div class="font-md bold">
                {{spin.spinPrize.title}}
              </div>
              <div class="mt-3">
                3hr Ago
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <span>
      <i class="fas fa-chevron-right"></i>
    </span>
  </div>
</div>