<div class="border-card p-0">
  <div class="px-5 pt-5">
    <h4 class="bold">Wishlisted Courses</h4>
    <div class="divider-h mt-4"></div>
  </div>
  <WAsync 
    @task={{fetchWishlistCoursesTask}}
    @autoFire="true" as |wishlist|>
    {{#each wishlist as |item|}}
      <div class="hover-grey px-5 py-4">
        <div class="row mx-0 align-items-center">
          <div class="col-2">
            <img src="{{item.course.logo}}" alt="">
          </div>
          <div class="col-10">
            <h5 class="bold">{{item.course.title}}</h5>
            <div class="mt-3 rating">
              <span class="pos-rating orange">
                <i class="fas fa-star fa-lg"></i>
              </span>
              <span class="pos-rating orange pl-2">
                <i class="fas fa-star fa-lg"></i>
              </span>
              <span class="pos-rating orange pl-2">
                <i class="fas fa-star fa-lg"></i>
              </span>
              <span class="pos-rating orange pl-2">
                <i class="fas fa-star fa-lg"></i>
              </span>
              <span class="neg-rating pl-2">
                <i class="fas fa-star fa-lg"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </WAsync>
  <div class="t-align-c">
    <button class="button-solid button-orange my-5">View All</button>
  </div>
</div>