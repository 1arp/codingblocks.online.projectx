<div class="border-card p-0">
  <div class="px-5 pt-5">
    <h4 class="bold">Applied Jobs</h4>
    <div class="divider-h mt-4"></div>
  </div>
  <WAsync 
    @task={{fetchAppliedJobsTask}}
    @autoFire="true" as |jobs|>
    {{#each jobs as |job|}}
      <div class="hover-grey px-5 py-4">
        <div class="row mx-0 align-items-center">
          <div class="col-2">
            <img src="{{job.company.logo}}" alt="">
          </div>
          <div class="col-10">
            <h5 class="bold">{{job.role}}</h5>
            <span>{{job.company.name}}</span>
          </div>
        </div>
      </div>
    {{/each}}
  </WAsync>
  <div class="t-align-c">
    <button class="button-solid button-orange my-5">View All</button>
  </div>
</div>