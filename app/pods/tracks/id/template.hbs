<div class="row">
  <div class="col-md-8 my-4">
    <h4>{{track.name}}</h4>
    <ul>
      {{#each track.courses as |course|}}
        <li>
          {{course.title}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-4 my-4">
    <div class="border-card p-5">
      <h4 class="bold gradient-text-orange d-flex align-items-center">
        <img src="/app/images/doubt_chat.svg" alt="hat">
        <span class="ml-2">Have any Doubts?</span>
      </h4>
      <div class="divider-h my-4"></div>
      <p class="grey">
        Just fill in your details and our edu. counsellor will get back to you!
      </p>
      <div class="mt-4">
        <input type="text" class="input-search bg-light-grey p-3 w-100" placeholder="Name">
      </div>
      <div class="mt-4">
        <input type="text" class="input-search bg-light-grey p-3 w-100" placeholder="Name">
      </div>
      <button class="mt-4 button-solid button-orange">
        Send Details
      </button>
    </div>
    <WAsync @task={{fetchInstructorsTask}} @autoFire="true" as |instructors|>
      <MentorCard
        class="mt-5"
        @instructors={{instructors}} />
    </WAsync>
  </div>
</div>
