<div class="list-divided border-none">
  {{#each predictionQuestions as |question index|}}
  <div class="pb-4">
    <div class="d-flex">
      <div class="li-left">
        <div class="flex-column align-items-start">
          <div class="bold">Level {{index}}</div>
          <h4>{{question.question.title}}</h4>
        </div>
      </div>
      <div class="li-right">
        <div class="label-dashed"><span class="gradient-red-blue">{{question.question.score}} Points</span></div>
      </div>

    </div>
    <div class="mt-3">
      {{#if recorded}}
        {{question.prediction.cricketCupChoice.content.content}}
      {{else}}
        {{#each question.question.cricketCupChoices as |choice|}}
          <input name={{question.question.id}} type="radio" value={{choice.id}} class="mx-2" onclick={{action "selectChoice" question.question choice}} /> {{choice.content}}
        {{/each}}
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>
{{#if submitAllow}}
  <button class="button-solid btn-grad-red-blue font-mds mt-5" {{action (perform submitTask)}}>Submit Predictions</button>
{{/if}}