<div class="c-cc">
{{outlet}}
  <div class="banner mb-4">
    <img src="/images/bannner.jpg" alt="">
  </div>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center font-md bold">
      <div>Welcome, {{user.firstname}} {{user.lastname}}</div>
      <div>
        <span class="gradient-red-blue pr-4">
          Your Winnings: INR {{earnings}}
        </span>
        {{#link-to 'courses' class="button-solid btn-grad-red-blue"}}
          Use now
        {{/link-to}}
      </div>
    </div>
    {{#each matches as |match|}}
      <CricketMatchCard @match={{match}} />
    {{/each}}  
  </div>
</div>